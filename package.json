{
  "name": "react-library-boilerplate",
  "license": "MIT",
  "version": "1.0.0",
  "private": false,
  "description": "React Typescript Library Boilerplate",
  "author": "James Olson",
  "homepage": "https://github.com/sixfootsixdesigns/React-Library-Boilerplate",
  "bugs": {
    "url": "https://github.com/sixfootsixdesigns/React-Library-Boilerplate/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sixfootsixdesigns/React-Library-Boilerplate.git"
  },
  "scripts": {
    "build": "yarn clean; rollup -c; yarn postBuild",
    "postBuild": "node ./scripts/postBuild",
    "clean": "rimraf dist",
    "dev": "yarn storybook",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,js,jsx}\"",
    "format:check": "prettier --list-different \"src/**/*.{ts,tsx,json,js,jsx}\"",
    "lint": "yarn lint:script && yarn lint:style",
    "lint:script": "eslint --ext js --ext jsx --ext ts --ext tsx src",
    "lint:style": "stylelint src",
    "storybook": "start-storybook -p 9001 -s ./src/assets -c .storybook",
    "test": "jest --maxWorkers=2",
    "test:watch": "yarn test --watch",
    "test:coverage": "jest --coverage --colors --maxWorkers=2"
  },
  "main": "lib.cjs.js",
  "module": "lib.esm.js",
  "browser": "lib.umd.js",
  "types": "index.d.ts",
  "dependencies": {
    "classnames": "^2.2.6",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-react": "^7.10.4",
    "@guildeducationinc/prettier-config": "^2.0.1",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@storybook/addon-actions": "^6.0.26",
    "@storybook/addon-essentials": "^6.0.26",
    "@storybook/addon-links": "^6.0.26",
    "@storybook/preset-scss": "^1.0.2",
    "@storybook/preset-typescript": "^3.0.0",
    "@storybook/react": "^6.0.26",
    "@testing-library/react": "^10.0.2",
    "@types/classnames": "^2.2.10",
    "@types/jest": "^25.2.1",
    "@types/node": "^10.12.18",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.6",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "babel-loader": "^8.1.0",
    "css-loader": "^4.3.0",
    "eslint": "^6.8.0",
    "eslint-config-guild-typescript": "^2.2.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "jest": "^25.3.0",
    "node-sass": "^4.13.1",
    "prettier": "^2.0.4",
    "react-is": "^16.13.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.6.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-external-globals": "^0.6.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-postcss": "^2.5.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-typescript2": "^0.27.0",
    "sass-loader": "^10.0.2",
    "style-loader": "^1.3.0",
    "stylelint": "^13.3.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-scss": "^3.16.1",
    "ts-jest": "^25.3.1",
    "ts-loader": "^6.2.2",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1"
  },
  "prettier": "@guildeducationinc/prettier-config",
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "guild-typescript",
      "plugin:prettier/recommended"
    ]
  }
}